<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import javafx.scene.shape.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.VBox?>

<VBox onMouseClicked="#upgradeAMouseClicked" onMouseEntered="#upgradeAMouseEntered" onMouseExited="#upgradeAMouseExited" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
	<children>
		<Label fx:id="entityNameLabel" text="Nom de l'entité">
			<font>
				<Font name="System Bold" size="24.0" />
			</font>
			<VBox.margin>
				<Insets />
			</VBox.margin>
		</Label>
		<Line endX="100.0" opacity="0.75" startX="-100.0" strokeWidth="3.0">
			<VBox.margin>
				<Insets bottom="10.0" />
			</VBox.margin>
		</Line>
		<BorderPane>
			<left>
				<Label text="Acheter" BorderPane.alignment="CENTER">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</left>
			<right>
				<Label fx:id="buyCostLabel" text="Coût : xx" BorderPane.alignment="CENTER">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</right>
		</BorderPane>
		<HBox alignment="CENTER" spacing="5.0">
			<children>
				<Button mnemonicParsing="false" onAction="#buyOneAction" text="x1" />
				<Button mnemonicParsing="false" onAction="#buyTwoAction" onMouseEntered="#buyTwoMouseEntered" onMouseExited="#buyTwoMouseExited" text="x2" />
				<Button mnemonicParsing="false" onAction="#buyFiveAction" onMouseEntered="#buyFiveMouseEntered" onMouseExited="#buyFiveMouseExited" text="x5" />
				<Line endY="23.0" opacity="0.75" strokeWidth="2.0">
					<HBox.margin>
						<Insets left="5.0" right="5.0" />
					</HBox.margin>
				</Line>
				<TextField fx:id="buyAmountField" prefWidth="50.0" promptText="Autre">
					<HBox.margin>
						<Insets />
					</HBox.margin>
				</TextField>
				<Button mnemonicParsing="false" onAction="#buyNAction" onMouseEntered="#buyNMouseEntered" onMouseExited="#buyNMouseExited" text="OK" />
			</children>
		</HBox>
		<BorderPane>
			<left>
				<Label text="Améliorer" BorderPane.alignment="CENTER">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</left>
			<right>
				<Label fx:id="upgradeCostLabel" text="Coût : xx" BorderPane.alignment="CENTER">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</right>
			<VBox.margin>
				<Insets top="5.0" />
			</VBox.margin>
		</BorderPane>
		<HBox alignment="CENTER" spacing="15.0">
			<children>
				<Label fx:id="upgradeBeforeLabel" text="Tier N" />
				<Button fx:id="upgradeButton" mnemonicParsing="false" onAction="#upgradeAction" text="==&gt;" />
				<Label fx:id="upgradeAfterLabel" text="Tier N+1" />
			</children>
		</HBox>
		<TextFlow fx:id="upgradeDescText">
			<VBox.margin>
				<Insets bottom="10.0" top="10.0" />
			</VBox.margin>
		</TextFlow>
		<HBox fx:id="chooseUpgradeBox" alignment="CENTER" spacing="25.0">
         <children>
            <ImageView fx:id="upgradeAImage" fitHeight="48.0" fitWidth="48.0" onMouseClicked="#upgradeAMouseClicked" onMouseEntered="#upgradeAMouseEntered" onMouseExited="#upgradeAMouseExited" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" />
               </HBox.margin>
            </ImageView>
            <ImageView fx:id="upgradeBImage" fitHeight="48.0" fitWidth="48.0" onMouseClicked="#upgradeBMouseClicked" onMouseEntered="#upgradeBMouseEntered" onMouseExited="#upgradeBMouseExited" pickOnBounds="true" preserveRatio="true">
               <HBox.margin>
                  <Insets bottom="5.0" left="10.0" right="10.0" />
               </HBox.margin>
            </ImageView>
         </children>
         <VBox.margin>
            <Insets />
         </VBox.margin>
		</HBox>
	</children>
	<padding>
		<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
	</padding>
</VBox>
