<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import fr.helmdefense.view.statbar.StatBar?>

<BorderPane xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fr.helmdefense.controller.Controller">
	<center>
		<Pane fx:id="levelPane" maxHeight="704.0" maxWidth="1024.0"
			minHeight="704.0" minWidth="1024.0" prefHeight="704.0"
			prefWidth="1024.0" style="-fx-background-color: green;"
			BorderPane.alignment="CENTER">
			<children>
				<TilePane fx:id="mapPane" />
			</children>
		</Pane>
	</center>
	<left>
		<TabPane tabClosingPolicy="UNAVAILABLE">
			<tabs>
				<Tab text="Stats">
					<content>
						<VBox alignment="TOP_CENTER" spacing="10.0"
							BorderPane.alignment="CENTER">
							<children>
								<Label fx:id="entityNameLabel" text="Nom de l'unité"
									textAlignment="CENTER">
									<font>
										<Font name="System Bold" size="25.0" />
									</font>
								</Label>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label fx:id="entityHealthPercentLabel" text="xx%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityHealthBar" prefHeight="35.0"
											prefWidth="125.0" color="#ff3333" value="1200" max="1500"
											displayStyle="FULL_ROUND" />
										<Label fx:id="entityHealthBonusLabel" text="+xxx">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
									<VBox.margin>
										<Insets />
									</VBox.margin>
								</HBox>
								<Label text="Statistiques">
									<font>
										<Font size="24.0" />
									</font>
									<VBox.margin>
										<Insets top="25.0" />
									</VBox.margin>
								</Label>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="PV">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityHpBar" prefHeight="35.0"
											prefWidth="100.0" color="#4db8ff" />
										<Label fx:id="entityHpBonusLabel" text="+xx%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="Dégâts">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityDmgBar" prefHeight="35.0"
											prefWidth="100.0" color="#4db8ff" />
										<Label fx:id="entityDmgBonusLabel" text="+xx%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="Vit mvt">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityMvtSpdBar" prefHeight="35.0"
											prefWidth="100.0" color="#4db8ff" />
										<Label fx:id="entityMvtSpdBonusLabel" text="+xx%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="Vit atk">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityAtkSpdBar" prefHeight="35.0"
											prefWidth="100.0" color="#4db8ff" />
										<Label fx:id="entityAtkSpdBonusLabel" text="+xx%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="Portée atk">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityAtkRangeBar" prefHeight="35.0"
											prefWidth="100.0" color="#4db8ff" />
										<Label fx:id="entityAtkRangeBonusLabel" text="+xx%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label text="Portée tir">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityDistRangeBar" prefHeight="35.0"
											prefWidth="100.0" color="#4db8ff" />
										<Label fx:id="entityDistRangeBonusLabel" text="+xx%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
								</HBox>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label fx:id="entityMoneyLabel" text="Coût">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityMoneyBar" prefHeight="35.0"
											prefWidth="100.0" color="#4db8ff" />
										<ImageView fitHeight="32.0" fitWidth="32.0"
											pickOnBounds="true" preserveRatio="true">
											<image>
												<Image url="@../../../../assets/models/coin.png" />
											</image>
										</ImageView>
									</children>
								</HBox>
								<TextFlow fx:id="entityDescText">
									<VBox.margin>
										<Insets top="25.0" />
									</VBox.margin>
								</TextFlow>
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</VBox>
					</content>
				</Tab>
				<Tab text="Inventaire">
					<content>
						<VBox fx:id="inventoryList" alignment="TOP_CENTER"
							spacing="25.0">
							<padding>
								<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
							</padding>
						</VBox>
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</left>
	<right>
		<ScrollPane hbarPolicy="NEVER"
			BorderPane.alignment="CENTER">
			<content>
				<VBox fx:id="entityIDCardList" alignment="TOP_CENTER"
					spacing="25.0">
					<padding>
						<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
					</padding>
				</VBox>
			</content>
		</ScrollPane>
	</right>
	<bottom>
		<BorderPane BorderPane.alignment="CENTER">
			<left>
				<Label prefWidth="500.0" text="IUT de Montreuil, projet S2"
					BorderPane.alignment="CENTER">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
			</left>
			<center>
				<Label text="By Télio, Jules &amp; Théo"
					BorderPane.alignment="CENTER">
					<font>
						<Font name="System Italic" size="24.0" />
					</font>
				</Label>
			</center>
			<right>
				<Label fx:id="buyInfoLabel" alignment="CENTER_RIGHT"
					contentDisplay="RIGHT" prefWidth="500.0"
					text="Unité xN - Clic gauche pour placer" textAlignment="RIGHT"
					BorderPane.alignment="CENTER">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</right>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</BorderPane>
	</bottom>
	<top>
		<BorderPane BorderPane.alignment="CENTER">
			<left>
				<HBox alignment="CENTER_LEFT" prefWidth="500.0" spacing="10.0"
					BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="optionButton" mnemonicParsing="false"
							onAction="#optionButtonAction" text="Options" />
						<Button fx:id="pauseButton" mnemonicParsing="false"
							onAction="#pauseButtonAction" text="Pause" />
						<Button fx:id="speedButton" mnemonicParsing="false"
							onAction="#speedButtonAction" text="Rapide" />
					</children>
				</HBox>
			</left>
			<right>
				<HBox alignment="CENTER_RIGHT" prefWidth="500.0" spacing="10.0"
					BorderPane.alignment="CENTER">
					<children>
						<Label fx:id="moneyLabel" text="0">
							<font>
								<Font size="24.0" />
							</font>
						</Label>
						<ImageView fx:id="moneyImage" fitHeight="32.0"
							fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../../../../assets/models/coin.png" />
							</image>
						</ImageView>
					</children>
				</HBox>
			</right>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
			<center>
				<VBox alignment="CENTER" BorderPane.alignment="CENTER">
					<children>
						<Label text="Helm Defense" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="35.0" />
							</font>
						</Label>
						<Label fx:id="levelNameLabel" text="Niveau en cours">
							<font>
								<Font size="18.0" />
							</font>
						</Label>
					</children>
				</VBox>
			</center>
		</BorderPane>
	</top>
</BorderPane>
