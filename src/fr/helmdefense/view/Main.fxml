<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.BorderPane?>
<?import fr.helmdefense.view.statbar.StatBar?>
<?import fr.helmdefense.view.inventory.InventoryView?>

<BorderPane xmlns="http://javafx.com/javafx/8"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="fr.helmdefense.controller.Controller">
	<center>
		<Pane fx:id="levelPane" maxHeight="704.0" maxWidth="1024.0"
			minHeight="704.0" minWidth="1024.0" prefHeight="704.0"
			prefWidth="1024.0" style="-fx-background-color: green;"
			BorderPane.alignment="CENTER">
			<children>
				<TilePane fx:id="mapPane" />
			</children>
		</Pane>
	</center>
	<left>
		<TabPane fx:id="leftPane" tabClosingPolicy="UNAVAILABLE">
			<tabs>
				<Tab text="Stats">
					<content>
						<VBox alignment="TOP_CENTER" spacing="10.0"
							BorderPane.alignment="CENTER">
							<children>
								<Label fx:id="entityNameLabel"
									text="Sélectionnez une entité" textAlignment="CENTER">
									<font>
										<Font name="System Bold" size="25.0" />
									</font>
								</Label>
								<HBox alignment="CENTER" spacing="5.0">
									<children>
										<Label fx:id="entityHealthPercentLabel" text="100%">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
										<StatBar fx:id="entityHealthBar" prefHeight="35.0"
											prefWidth="125.0" color="#ff3333" value="1" max="1"
											displayStyle="FULL_ROUND" />
										<Label fx:id="entityHealthBonusLabel" text="+0">
											<font>
												<Font size="18.0" />
											</font>
										</Label>
									</children>
									<VBox.margin>
										<Insets />
									</VBox.margin>
								</HBox>
								<Label text="Statistiques">
									<font>
										<Font size="24.0" />
									</font>
									<VBox.margin>
										<Insets top="25.0" />
									</VBox.margin>
								</Label>
								<HBox alignment="CENTER" spacing="5.0">
									<VBox alignment="CENTER_RIGHT">
										<children>
											<Label fx:id="entityHpLabel" alignment="CENTER_RIGHT"
												prefHeight="35.0" text="PV" textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityDmgLabel" alignment="CENTER_RIGHT"
												prefHeight="35.0" text="Dégâts" textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityMvtSpdLabel"
												alignment="CENTER_RIGHT" prefHeight="35.0" text="Vit Mvt"
												textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityAtkSpdLabel"
												alignment="CENTER_RIGHT" prefHeight="35.0" text="Vit Atk"
												textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityAtkRangeLabel"
												alignment="CENTER_RIGHT" prefHeight="35.0" text="Portée Atk"
												textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityDistRangeLabel"
												alignment="CENTER_RIGHT" prefHeight="35.0" text="Portée Tir"
												textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityCostLabel" alignment="CENTER_RIGHT"
												prefHeight="35.0" text="Coût" textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityRewardLabel"
												alignment="CENTER_RIGHT" prefHeight="35.0" text="Récompense"
												textAlignment="RIGHT">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
										</children>
									</VBox>
									<VBox>
										<children>
											<StatBar fx:id="entityHpBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
											<StatBar fx:id="entityDmgBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
											<StatBar fx:id="entityMvtSpdBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
											<StatBar fx:id="entityAtkSpdBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
											<StatBar fx:id="entityAtkRangeBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
											<StatBar fx:id="entityDistRangeBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
											<StatBar fx:id="entityCostBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
											<StatBar fx:id="entityRewardBar" prefHeight="35.0"
												prefWidth="100.0" color="#4db8ff" />
										</children>
									</VBox>
									<VBox alignment="CENTER_LEFT">
										<children>
											<Label fx:id="entityHpBonusLabel" prefHeight="35.0"
												text="+10%">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityDmgBonusLabel" prefHeight="35.0">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityMvtSpdBonusLabel" prefHeight="35.0"
												text="+5%">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityAtkSpdBonusLabel" prefHeight="35.0">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityAtkRangeBonusLabel"
												prefHeight="35.0">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<Label fx:id="entityDistRangeBonusLabel"
												prefHeight="35.0" text="+25%">
												<font>
													<Font size="18.0" />
												</font>
											</Label>
											<ImageView fx:id="entityCostCoin" fitHeight="35.0"
												fitWidth="35.0" pickOnBounds="true" preserveRatio="true">
												<image>
													<Image url="@../../../../assets/models/coin.png" />
												</image>
											</ImageView>
											<ImageView fx:id="entityRewardCoin"
												fitHeight="35.0" fitWidth="35.0" pickOnBounds="true"
												preserveRatio="true">
												<image>
													<Image url="@../../../../assets/models/coin.png" />
												</image>
											</ImageView>
										</children>
									</VBox>
								</HBox>
								<TextFlow fx:id="entityDescText">
									<VBox.margin>
										<Insets top="25.0" />
									</VBox.margin>
								</TextFlow>
							</children>
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</VBox>
					</content>
				</Tab>
				<Tab text="Inventaire">
					<content>
						<InventoryView fx:id="inventory">
							<padding>
								<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
							</padding>
						</InventoryView>
					</content>
				</Tab>
			</tabs>
		</TabPane>
	</left>
	<right>
		<ScrollPane hbarPolicy="NEVER"
			BorderPane.alignment="CENTER">
			<content>
				<VBox fx:id="entityIDCardList" alignment="TOP_CENTER"
					spacing="25.0">
					<padding>
						<Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
					</padding>
				</VBox>
			</content>
		</ScrollPane>
	</right>
	<bottom>
		<BorderPane BorderPane.alignment="CENTER">
			<left>
				<Label prefWidth="500.0" text="IUT de Montreuil, projet S2"
					BorderPane.alignment="CENTER">
					<font>
						<Font size="14.0" />
					</font>
				</Label>
			</left>
			<center>
				<Label text="By Télio, Jules &amp; Théo"
					BorderPane.alignment="CENTER">
					<font>
						<Font name="System Italic" size="24.0" />
					</font>
				</Label>
			</center>
			<right>
				<Label fx:id="buyInfoLabel" alignment="CENTER_RIGHT"
					contentDisplay="RIGHT" prefWidth="500.0"
					text="Sélectionnez une entité dans l'inventaire pour la placer" textAlignment="RIGHT"
					BorderPane.alignment="CENTER">
					<font>
						<Font size="18.0" />
					</font>
				</Label>
			</right>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
		</BorderPane>
	</bottom>
	<top>
		<BorderPane BorderPane.alignment="CENTER">
			<left>
				<HBox alignment="CENTER_LEFT" prefWidth="500.0" spacing="10.0"
					BorderPane.alignment="CENTER">
					<children>
						<Button fx:id="optionButton" mnemonicParsing="false"
							onAction="#optionButtonAction" text="Options" />
						<Button fx:id="pauseButton" mnemonicParsing="false"
							onAction="#pauseButtonAction" text="Pause" />
						<Button fx:id="speedButton" mnemonicParsing="false"
							onAction="#speedButtonAction" text="Rapide" />
					</children>
				</HBox>
			</left>
			<right>
				<HBox alignment="CENTER_RIGHT" prefWidth="500.0" spacing="10.0"
					BorderPane.alignment="CENTER">
					<children>
						<Label fx:id="moneyLabel" text="0">
							<font>
								<Font size="24.0" />
							</font>
						</Label>
						<ImageView fx:id="moneyImage" fitHeight="32.0"
							fitWidth="32.0" pickOnBounds="true" preserveRatio="true">
							<image>
								<Image url="@../../../../assets/models/coin.png" />
							</image>
						</ImageView>
					</children>
				</HBox>
			</right>
			<padding>
				<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
			</padding>
			<center>
				<VBox alignment="CENTER" BorderPane.alignment="CENTER">
					<children>
						<Label text="Helm Defense" textAlignment="CENTER">
							<font>
								<Font name="System Bold" size="35.0" />
							</font>
						</Label>
						<Label fx:id="levelNameLabel" text="Niveau en cours">
							<font>
								<Font size="18.0" />
							</font>
						</Label>
					</children>
				</VBox>
			</center>
		</BorderPane>
	</top>
</BorderPane>
